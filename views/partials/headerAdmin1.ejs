    <link rel="stylesheet" href="/css/adminStyles.css" />
    <style>
      /*----------bootstrap-navbar-css------------*/
      .navbar-logo {
        padding: 15px;
        margin-left: 30px;
        padding-right: 100px;
        color: #fff;
      }

      /*----------bootstrap-navbar-css------------*/
      .dropdown-toggle::after {
