<!-- header import -->
<%- include('partials/headerComplaint') %>

<div class="nightmode">
  <input type="checkbox" class="checkbox" id="checkbox" />
  <label for="checkbox" class="label">
    <i class="fas fa-moon"></i>
    <i class="fas fa-sun"></i>
    <div class="ball"></div>
  </label>
</div>

<div class="testbox">
  <form action="/complaints" method="post" class="formingn">
    <h1>Workplace Complaint Form</h1>

    <div class="item">
      <p>Your name</p>
      <div>
        <input type="text" name="FirstName" placeholder="First Name" required/>
        <input type="text" name="LastName" placeholder="Last Name" required/>
      </div>
    </div>

    <div class="item">
      <p>Your email</p>
      <input class="formingnn" type="text" name="Email" required/>
    </div>

    <div class="item">
      <p>Date of Complaint</p>
      <input class="formingnn" type="date" name="Date" required />
      <i class="fas fa-calendar-alt"></i>
    </div>

    <div class="item">
      <p>City Name</p>
      <input class="formingnn" type="text" name="CityName" required/>
    </div>

    <div class="item">
      <p>Phone Number</p>
      <input class="formingnn" type="number" name="Phone" required/>
    </div>

    <div class="item">
      <p>The Person(s) involved in this complaint are:</p>
      <textarea class="formingnn" rows="5" name="PersonInvolved" required></textarea>
    </div>

    <div class="item">
      <p>
        Note: Write all relevant dates, places, events, etc. pertaining to the
        complaint:
      </p>
      <textarea
        class="formingnn"
        rows="5"
        name="Relevent_Information"
        required
      ></textarea>
    </div>

    <div class="item">
      <p>Signature:</p>
      <textarea class="formingnn" rows="5" name="Signature" required></textarea>
    </div>

    <div class="btn-block">
      <!-- <button type="submit" href="/">Send</button> -->
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
      >
        Submit
      </button>
    </div>
    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure to Submit?</h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="submit" href="/" class="btn btn-primary">Confirmed</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<script>
  const checkbox = document.getElementById("checkbox");

  checkbox.addEventListener("change", () => {
    // change the theme of the website
    document.body.classList.toggle("dark");
    //form to dark
    document.querySelector(".formingn").classList.toggle("dark");
    //input dark
    var x = document.querySelector(".formingnn");
    x.classList.toggle("dark");
  });
</script>

<%- include("partials/footer"); -%>
